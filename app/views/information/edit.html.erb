<% if logged_in? %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading">情報を編集する</div>
        <div class="panel-body">
          <%= form_for(@information) do |f| %>
            <div class="form-group">
              <%= f.label :highschool, '出身高校' %>
              <%= f.text_field :highschool, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :university, '出身大学' %>
              <%= f.text_field :university, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :faculty, '学部' %>
              <%= f.text_field :faculty, class: 'form-control' %>
            </div>

            <div class="form-group sentence">
              <%= f.label :content, '大学での経験' %>
              <%= f.text_area :content, class: 'form-control' %>
            </div>

            <div class="text-right">
              <%= f.submit '編集する', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <% redirect_to root_url %>
<% end %>
